<div class="flex flex-col items-center justify-center mt-16">
    <h1 class="antic-didone-regular text-4xl mb-8">Contact</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-800 border border-green-300 rounded-lg p-4 mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="w-full max-w-md">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-lg font-semibold'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-input w-full'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-lg font-semibold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-input w-full'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div>
                {{ form_label(form.message, null, {'label_attr': {'class': 'block text-lg font-semibold'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-textarea w-full'}}) }}
                {{ form_errors(form.message) }}
            </div>
            <div>
                <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition">
                    Send Message
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>