<div class="flex flex-col items-center justify-center mt-16">
    <h1 class="antic-didone-regular text-4xl mb-8">Contact</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-800 border border-green-300 rounded-lg p-4 mb-4">
            {{ message }}
        </div>
    {% endfor %}

    <div class="w-full max-w-l border border-gray-300 rounded-lg p-6 shadow-sm">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="space-y-2">
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-lg font-semibold text-gray-700'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-300 focus:outline-none'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="space-y-2">
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-lg font-semibold text-gray-700'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-300 focus:outline-none'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="space-y-2">
                {{ form_label(form.message, null, {'label_attr': {'class': 'block text-lg font-semibold text-gray-700'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-textarea w-full border border-gray-300 rounded-lg p-2 focus:ring focus:ring-blue-300 focus:outline-none'}}) }}
                {{ form_errors(form.message) }}
            </div>
            <div class="pt-4">
                <button type="submit" class="w-full bg-black text-white py-2 px-4 rounded-lg hover:bg-white hover:text-black transition focus:ring focus:outline-none">
                    Send Message
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>